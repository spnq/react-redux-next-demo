{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
	"outDir": "./build",
	"baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
	"jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
	"incremental":true
  },
  "exclude": ["node_modules", "build"]
}
