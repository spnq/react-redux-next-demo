{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
	"baseUrl": ".",
	"paths": {
		"@awesome/*": ["visual-libs/awesome-lib/*"],
		"@structure/*": ["visual-libs/structure/*"],
		"@defaults/*": ["libs/defaults/*"],
		"@utils/*": ["libs/utils/*"]
	},
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
	"incremental":true
  },
  "include": [
	  "visual-libs",
	  "apps",
	  "libs",
	  "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
